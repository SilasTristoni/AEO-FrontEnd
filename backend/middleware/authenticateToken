const jwt = require('jsonwebtoken');
const JWT_SECRET_KEY = 'CHAVE SECRETA DO JWT'; // Use a mesma chave que está no usersControllers.js

function authenticateToken(req, res, next) {
  const authHeader = req.headers['authorization'];
  const token = authHeader && authHeader.split(' ')[1]; // Formato "Bearer TOKEN"
  
  if (!token) {
    return res.status(401).json({ error: 'Token não fornecido.' });
  }

  jwt.verify(token, JWT_SECRET_KEY, (err, decoded) => {
    if (err) {
      console.error('Erro ao verificar token:', err.message);
      return res.status(403).json({ error: 'Token inválido.' });
    }
    // Adiciona os dados do usuário (payload do token) ao objeto da requisição
    req.user = { id: decoded.id, name: decoded.name };  
    next(); // Passa para a próxima função (o controller da rota)
  });
}

module.exports = authenticateToken;